<%= container_begin %>
<%= raw_row_col_begin %>

<h2>Control de acceso</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: {
                  autocomplete: "email",
                  placeholder: "su-correo@dominio-valido.com" },
                hint: "Ingrese su cuenta de correo registrado en este sistema." %>

    <%= f.input :password,
                required: true,
                input_html: { autocomplete: "current-password" } %>

    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Ingresar", class: "btn btn-primary" %>
  </div>
<% end %>

<br>

<%= render "devise/shared/links" %>

<%= raw_row_col_end %>
<%= container_end %>